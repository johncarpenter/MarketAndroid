<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activity.TutorialActivity">

     <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeightLarge"
        android:layout_marginBottom="@dimen/content_margins_half"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/button_skip"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/content_margins_half"
            android:background="@android:color/transparent"
            android:text="@string/tutorial_skip" />


        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/viewpager_indicator"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/button_next"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/content_margins_half"
            android:background="@android:color/transparent"
            android:text="@string/tutorial_nextdone" />


    </LinearLayout>

</RelativeLayout>
