<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/pal_grey_1">



        <TextView
            android:layout_gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SmarterList.CaptionBar"
            android:text="@string/create_details" />
        <LinearLayout
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/listPreferredItemHeightLarge"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_gravity="bottom|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_margins"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/edit_smartlist_name"
                    android:layout_gravity="left|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/content_margins"
                    style="@style/SmarterList.TextStyle.Title"
                    android:hint="@string/create_choose_title" />

                <EditText
                    android:id="@+id/edit_smartlist_description"
                    android:layout_gravity="left|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/content_margins"
                    style="@style/SmarterList.TextStyle.Body"
                    android:hint="@string/create_choose_desc" />

            </LinearLayout>


        </LinearLayout>

        <!--TextView
            android:layout_gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SmarterList.CaptionBar"
            android:text="@string/create_lists" />

        <LinearLayout
            android:id="@+id/layout_select_masterlist"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
