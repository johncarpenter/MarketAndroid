        <TextView
            android:id="@+id/text_select_sharing"
            android:layout_gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SmarterList.CaptionBar"
            android:text="@string/create_sharing"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/layout_select_sharing"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:orientation="horizontal"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:stateListAnimator="@anim/raise"
            android:visibility="gone"
            tools:ignore="UnusedAttribute">


            <ImageView
                android:layout_width="@dimen/image_list_icon_sm"
                android:layout_height="@dimen/image_list_icon_sm"
                android:src="@drawable/ic_action_add_group"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/content_margins"
                android:layout_marginRight="@dimen/content_margins"
                android:layout_marginTop="@dimen/content_margins_half"
                android:layout_marginBottom="@dimen/content_margins_half" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_margins"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_sharing_name"
                    android:layout_gravity="left|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_margins_half"
                    style="@style/SmarterList.TextStyle.Body"
                    android:hint="@string/create_add_sharing" />

                <TextView
                    android:id="@+id/text_sharing_name_sub"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_margins_half"
                    android:layout_marginBottom="@dimen/content_margins_half"
                    style="@style/SmarterList.TextStyle.Caption"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SmarterList.CaptionBar"
            android:visibility="gone"
            android:text="@string/create_places_notification" />
        <LinearLayout
            android:id="@+id/layout_select_places"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:orientation="horizontal"
            android:visibility="gone"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:stateListAnimator="@anim/raise"
            tools:ignore="UnusedAttribute">


            <ImageView
                android:layout_width="@dimen/image_list_icon_sm"
                android:layout_height="@dimen/image_list_icon_sm"
                android:src="@drawable/ic_action_place"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/content_margins"
                android:layout_marginRight="@dimen/content_margins"
                android:layout_marginTop="@dimen/content_margins_half"
                android:layout_marginBottom="@dimen/content_margins_half" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_margins"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_places_name"
                    android:layout_gravity="left|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_margins_half"
                    style="@style/SmarterList.TextStyle.Body"
                    android:hint="@string/create_choose_destination" />

                <TextView
                    android:id="@+id/text_places_name_sub"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_margins_half"
                    android:layout_marginBottom="@dimen/content_margins_half"
                    style="@style/SmarterList.TextStyle.Caption"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>