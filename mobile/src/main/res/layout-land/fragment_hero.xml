<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_hero_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/hero_title"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_margins_half"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="@dimen/content_margins_half"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="left|center_vertical"
            android:id="@+id/text_hero_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmarterList.TextStyle.HeroTitle"
            android:text="Header"/>

      </LinearLayout>

    <ImageView
        android:id="@+id/image_hero_icon"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/hero_title"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/content_margins"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/pal_grey_5_trans">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/text_hero_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            style="@style/SmarterList.TextStyle.HeroCaption"
            android:text="caption"/>

    </LinearLayout>

</RelativeLayout>
