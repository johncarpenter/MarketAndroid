<resources>

    <style name="SmarterList"></style>

    <!-- Base application theme. -->
    <style name="SmarterList.App" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/pal_4</item>
        <item name="colorPrimaryDark">@color/pal_5</item>
        <item name="colorAccent">@color/pal_4</item>

        <item name="android:windowBackground">@color/pal_grey_1</item>

        <item name="android:textColorPrimary">@color/pal_grey_6</item>
        <item name="android:textColor">@color/pal_grey_6</item>

        <item name="android:textColorSecondary">@color/pal_grey_6</item>
        <item name="android:textColorHighlight">@color/pal_grey_4</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:actionModeCloseDrawable">@drawable/ic_action_cancel</item>

        <!-- Widget Styles -->
        <item name="android:editTextStyle">@style/SmarterList.Widget.App.EditText</item>
        <item name="vpiTitlePageIndicatorStyle">@style/SmarterList.TitlePageIndicator</item>

        <item name="android:buttonStyle">@style/SmarterList.ButtonFlat</item>
        <item name="android:actionModeStyle">@style/SmarterList.ActionMode</item>


    </style>


    <style name="SmarterList.App.Tutorial" parent="SmarterList.App">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
